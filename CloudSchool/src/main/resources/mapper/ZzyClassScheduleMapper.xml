  <!-- 查询某个班级 某个日期是否包含了事件或者休息 -->
  <select id="querySjAndXx" resultType="INTEGER">
  		  SELECT COUNT(*) FROM `zzy_class_schedule` WHERE `time`=#{time} AND `clid`=#{clid} AND (state=-2 OR state&gt;0)
