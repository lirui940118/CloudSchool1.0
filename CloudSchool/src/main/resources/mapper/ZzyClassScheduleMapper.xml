  <!-- 根据班级id以及课程id查询这个班级的这个课程上了多少次课了 -->
  <select id="queryClidAndCid" resultType="INTEGER">
  		SELECT COUNT(*) FROM `zzy_class_schedule` WHERE clid=#{clid} AND cid=#{cid}
  </select>
  
  <!-- 根据教员id  日期 时间区间 状态 判断该教员是否有空 -->
